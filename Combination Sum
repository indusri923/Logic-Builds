class Solution {
public:
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>> res;
        vector<int> path;
        backtrack(candidates, target, 0, path, res);
        return res;
    }

private:
    void backtrack(vector<int>& candidates, int remaining, int start,
                   vector<int>& path, vector<vector<int>>& res) {
        if (remaining == 0) {
            res.push_back(path); // found a valid combination
            return;
        }
        if (remaining < 0) return;

        for (int i = start; i < candidates.size(); i++) {
            path.push_back(candidates[i]); // choose
            backtrack(candidates, remaining - candidates[i], i, path, res); // reuse allowed
            path.pop_back(); // undo choice
        }
    }
};
